{
  "name": "mondodb",
  "version": "0.1.0",
  "description": "MongoDB-compatible database backed by Cloudflare Durable Objects SQLite",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:compat": "vitest run --config vitest.config.compat.ts",
    "test:compat:watch": "vitest --config vitest.config.compat.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "capnweb": "^0.1.0"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20240925.0",
    "@types/node": "^20.19.27",
    "mongodb": "^7.0.0",
    "mongodb-memory-server": "^11.0.1",
    "typescript": "^5.6.0",
    "vitest": "^2.1.0",
    "wrangler": "^3.80.0"
  },
  "keywords": [
    "mongodb",
    "cloudflare",
    "durable-objects",
    "sqlite",
    "database"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
