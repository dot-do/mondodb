{
  "name": "mondodb",
  "version": "0.1.0",
  "description": "MongoDB-compatible database backed by Cloudflare Durable Objects SQLite",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "wrangler dev",
    "server": "bun run src/server.ts",
    "server:verbose": "bun run src/server.ts --verbose",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:compat": "vitest run --config vitest.config.compat.ts",
    "test:compat:watch": "vitest --config vitest.config.compat.ts",
    "typecheck": "tsc --noEmit",
    "deploy": "wrangler deploy"
  },
  "dependencies": {
    "@types/js-yaml": "^4.0.9",
    "bson": "^6.10.0",
    "capnweb": "^0.1.0",
    "js-yaml": "^4.1.1"
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.5.0",
    "@cloudflare/workers-types": "^4.20240925.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/bun": "^1.2.4",
    "@types/node": "^20.19.27",
    "@vitejs/plugin-react": "^5.1.2",
    "jsdom": "^27.4.0",
    "mongodb": "^7.0.0",
    "mongodb-memory-server": "^11.0.1",
    "typescript": "^5.6.0",
    "vitest": "^2.1.9",
    "wrangler": "^4.54.0"
  },
  "keywords": [
    "mongodb",
    "cloudflare",
    "durable-objects",
    "sqlite",
    "database"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  }
}
